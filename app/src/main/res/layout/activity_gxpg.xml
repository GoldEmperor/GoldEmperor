<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="组别:"
            android:textColor="#3b5998"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="派工单号:"
            android:textColor="#3b5998"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_planbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="计划跟踪号:"
            android:textColor="#3b5998"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="工厂型体:"
            android:textColor="#3b5998"
            android:textSize="20dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_list"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#55acee"
            fancy:fb_focusColor="#8cc9f8"
            fancy:fb_radius="10dp"
            fancy:fb_text="本组人员名单"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="20dp" />

    </LinearLayout>

    <com.goldemperor.Widget.ScrollListenerHorizontalScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_processcode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="工序编号"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_processname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="工序名称"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_userNumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="工号"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dispatchingnumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="预排数量"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_havedispatchingnumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="应派工数"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_nodispatchingnumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="应派工欠数"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_alreadynumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="实际汇报数量"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_nonumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="汇报欠数"
                android:textSize="20dp" />

        </LinearLayout>
    </com.goldemperor.Widget.ScrollListenerHorizontalScrollView>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScrollView"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="数据载入中"
        android:textSize="20dp" />

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_tip"
        android:layout_marginBottom="40dp"
        android:background="#ffffff" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#FF0000"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_radius="10dp"
        fancy:fb_text="提交工序"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="20dp" />
</RelativeLayout>
